<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tourisum.View.MenuPage">
    <ContentPage.Content>
        <StackLayout>
            <ListView HasUnevenRows="False"
                      x:Name="MenuPageListView">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <StackLayout Orientation="Horizontal">
                                <Image Source="{Binding MenuPageImage}"></Image>
                                <Label Text="{Binding MenuPageLabel}"></Label>
                            </StackLayout>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>